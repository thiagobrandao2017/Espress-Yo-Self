              <input type="text" name="user[email]" value="" class="form-control input-lg" placeholder="Your Email"/>
            </div>
            <div class="col-xs-6 col-md-6">
              <input type="password" name="user[password]" value="" class="form-control input-lg" placeholder="Password"  />
            </div>
          </div>
          <button class="btn btn-lg btn-primary btn-block signup-btn" type="submit">
            Login</button>
          </form>
        </div>
      </div>
    </div>
  </div>
